#!/bin/bash

case $1 in
  -ga)
      git add $2
  ;;
  -gc)
      git add $2
      git commit -m "${3}"
  ;;
  -gph)
      git add $2
      git commit -m "${3}"
      git push origin "${4}"
  ;;
  help)
      echo -e "Options \t Description"
      echo -e "-ga \t  This option adds the specified directory or file before commit. Eg: hgs -ga . or hgs -ga <file or dir>"
      echo -e "-gc \t  This option adds and commits the code. Eg: hgs -ga . 'comments for commit'"
      echo -e "-gph \t This option adds, commits and pushes the code to git repo Eg: hgs -gph . 'comments for commit' <branch name>"
  ;;
  *)
      echo "Incorrect Syntax"
  ;;
esac
